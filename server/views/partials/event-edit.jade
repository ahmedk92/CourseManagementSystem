            li
               a(href='servicescatalog') Services
            li
               a(href='events') Events
.container
   .page-header
      h1 Events Information
.container
   .row
      form(role='form')
         .col-lg-6
            .well.well-sm
               strong
                  span.glyphicon.glyphicon-asterisk
                  | Required Field
            .form-group
               label(for='EventTitle') Event Title
               .input-group
                  input#InputName.form-control(type='text', name='EventTitle', placeholder='Event Title', required='required')
                  span.input-group-addon
                     span.glyphicon.glyphicon-asterisk
            .form-group
               label(for='EventCost') Cost
               .input-group
                  input#InputCost.form-control(type='number', name='Cost', placeholder='Cost', required='required')
                  span.input-group-addon
                     span.glyphicon.glyphicon-asterisk
            //.form-group
            //   label(for='InputEmail') Confirm Email
            //   .input-group
            //      input#InputEmailSecond.form-control(type='email', name='InputEmail', placeholder='Confirm Email', required='required')
            //      span.input-group-addon
            //         span.glyphicon.glyphicon-asterisk
            .form-group
               label(for="dtp_input1") From
               .input-group.date.form_datetime.col-lg-6(data-date="2015-01-1T05:25:07Z", data-date-format="dd MM yyyy - HH:ii p", data-link-field="dtp_input1")
                  input.form-control(type="text", size="16", value="", readonly="")
                  span.input-group-addon
                     span.glyphicon.glyphicon-remove
                  span.input-group-addon
                     span.glyphicon.glyphicon-th
               input#dtp_input1(type="hidden", value="")

            .form-group
               label(for="dtp_input2") To
               .input-group.date.form_datetime.col-lg-6(data-date="2015-01-1T05:25:07Z", data-date-format="dd MM yyyy - HH:ii p", data-link-field="dtp_input2")
                  input.form-control(type="text", size="16", value="", readonly="")
                  span.input-group-addon
                     span.glyphicon.glyphicon-remove
                  span.input-group-addon
                     span.glyphicon.glyphicon-th
               input#dtp_input2(type="hidden", value="")

            .form-group
               label(for='EventDescription') Event Description
               .input-group
                  textarea#InputMessage.form-control(name='EventDescription', rows='5', required='required')
                  span.input-group-addon
                     span.glyphicon.glyphicon-asterisk

            button.btn.btn-lg.btn-success(onclick="location.href='';",type='button') Submit
            button.btn.btn-lg.btn-warning(onclick="location.href='events';",type='button') Cancel

         script(type="text/javascript", src="/jquery/jquery-1.8.3.min.js", charset="UTF-8")
         script(type="text/javascript", src="/js/bootstrap.min.js")
         script(type="text/javascript", src="/js/bootstrap-datetimepicker.js", charset="UTF-8")
         script(type="text/javascript", src="/js/locales/bootstrap-datetimepicker.fr.js", charset="UTF-8")
         script(type="text/javascript", src="/js/myscript", charset="UTF-8")
         script(type="text/javascript").
            $('.form_datetime').datetimepicker({
            //language:  'fr',
            weekStart: 1,
            todayBtn:  1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            forceParse: 0,
            showMeridian: 1
            });



